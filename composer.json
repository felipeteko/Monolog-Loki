{
  "name": "felipeteko/monolog-loki",
  "description": "Monolog handler to send logs directly to Grafana Loki",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "TekoEstudio\\Loki\\": "src/"
    }
  },
  "require": {
    "monolog/monolog": "^2.0 || ^3.0"
  },
  "require-dev": {
    "pestphp/pest": "^2.0",
    "phpunit/phpunit": "^9.5 || ^10.0"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "test": "vendor/bin/pest"
  }
}
